@model List<ValueTechNZ_Final.Models.Dto.GetProductsDto>


@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}


<partial name="_Notification" />

<!-- Hero Section -->
<div class="hero-section">
    <div class="grid-pattern"></div>
    <div class="container text-white content-wrapper">
        <div class="row align-items-center gy-4">
            <!-- Added gy-4 for vertical spacing between columns when stacked -->
            <div class="col-sm-6 mb-sm-5 mb-3">
                <!-- Modified column classes -->
                <h1 class="hero-title display-2 display-sm-3 display-xs-4">
                    <!-- Responsive font sizes -->
                    Value Tech NZ
                </h1>
                <p class="hero-description px-2 px-sm-0">
                    <!-- Added padding control for small screens -->
                    Find the cheapest but quality electronic devices from most popular brand here in our store!
                </p>
            </div>
            <div class="col-sm-6 text-center">
                <img src="/images/Gadgets.png"
                     class="img-fluid gadget-image"
                     style="max-width: 90%; width: auto;"
                     alt="Tech gadgets collection" />
            </div>
        </div>
    </div>
</div>

<div class="bg-light">
    <div class="container py-4">
        <h2 class="mt-3">Latest Products</h2>

        <div class="row mt-4 mb-5 g-3">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column justify-content-between rounded border shadow p-3 text-center h-100">
                        <img src="/images/@product.ImageFileName" class="img-fluid" style="max-height: 180px; object-fit:contain;" />
                        <hr />
                        <h5 class="py-2">@product.ProductName</h5>
                        <p>
                            Brand: @product.Brand, Category: @product.CategoryName
                        </p>
                        <h4 class="mb-3">@(product.Price)$</h4>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-primary btn-sm mb-2" asp-controller="Store" asp-action="GetProductDetails" asp-route-id="@product.ProductId" role="button">Details</a>
                            <button type="button" class="btn btn-warning btn-sm mb-2 ms-2" onclick="addToCart(this, @product.ProductId)">
                                Add to Cart<i class="bi bi-cart4"></i>
                            </button>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>

    <div class="container py-4">
        <h2 class="mt-3">Cheapest Products</h2>

        <div class="row mt-4 mb-5 g-3">
            @foreach (var product in ViewBag.CheapestProducts)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column justify-content-between rounded border shadow p-3 text-center h-100">
                        <img src="/images/@product.ImageFileName" class="img-fluid" style="max-height: 180px; object-fit:contain;" />
                        <hr />
                        <h5 class="py-2">@product.ProductName</h5>
                        <p>
                            Brand: @product.Brand, Category: @product.CategoryName
                        </p>
                        <h4 class="mb-3">@(product.Price)$</h4>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-primary btn-sm mb-2" asp-controller="Store" asp-action="GetProductDetails" asp-route-id="@product.ProductId" role="button">Details</a>
                            <button type="button" class="btn btn-warning btn-sm mb-2 ms-2" onclick="addToCart(this, @product.ProductId)">
                                Add to Cart<i class="bi bi-cart4"></i>
                            </button>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

