@model ApplicationUser


<!-- Modal -->
<div class="modal fade" id="editRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Edit Role</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="get" asp-controller="Users" asp-action="EditRole">
                    <input value="@Model.Id" name="id" type="hidden" />
                    <label class="mb-2">
                        @{
                            var roles = ViewBag.Roles;

                            var roleString = String.Join(", ", roles);

                            var color = "text-bg-info";
                            if (roles.Contains("Admin"))
                            {
                                color = "text-bg-danger";
                            }

                            <span>Current Role: </span><span class="badge rounded-pill @color">@roleString</span>


                        }
                    </label>
                    <select class="form-select mb-2" name="newRole" >
                        <option value="">Please select a new role</option>
                        @foreach(var role in ViewBag.AllRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>

                    <button type="submit" class="btn btn-primary mt-4">Submit</button>
                </form>

            </div>
            
        </div>
    </div>
</div>